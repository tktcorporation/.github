#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/user/.github/node_modules/.pnpm/oxlint-tsgolint@0.15.0/node_modules/oxlint-tsgolint/bin/node_modules:/home/user/.github/node_modules/.pnpm/oxlint-tsgolint@0.15.0/node_modules/oxlint-tsgolint/node_modules:/home/user/.github/node_modules/.pnpm/oxlint-tsgolint@0.15.0/node_modules:/home/user/.github/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/user/.github/node_modules/.pnpm/oxlint-tsgolint@0.15.0/node_modules/oxlint-tsgolint/bin/node_modules:/home/user/.github/node_modules/.pnpm/oxlint-tsgolint@0.15.0/node_modules/oxlint-tsgolint/node_modules:/home/user/.github/node_modules/.pnpm/oxlint-tsgolint@0.15.0/node_modules:/home/user/.github/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../oxlint-tsgolint/bin/tsgolint.js" "$@"
else
  exec node  "$basedir/../oxlint-tsgolint/bin/tsgolint.js" "$@"
fi
